{
    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "**/NiTiS.Core.csproj",
                        "**/NiTiS.Collections.csproj",
                        "**/NiTiS.Math.csproj"
                    ]
                }
            ],
            "dest": "api",
            "disableGitFeatures": false,
            "disableDefaultFilter": false,
            "properties": {
              "TargetFramework": "net7.0"
            }
        }
    ],
    "build": {
        "sitemap": {
          "baseUrl": "https://nitis-dev.github.io/wiki",
          "priority": 0.1,
          "changefreq": "weekly"
        },
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "content": [
            {
                "files": [ "**/index.md" ]
            },
            {
                "files": [ "api/**.yml" ]
            }
        ],
        "dest": "_site/",
        "globalMetadata": {
            "_enableSearch": true,
            "_gitContribute": { "branch": "web" }
        },
        "template": [
            "statictoc",
            "templates"
        ],
        "postProcessors": [
            "ExtractSearchIndex"
        ],
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false
    }
}