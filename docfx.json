{
    "metadata": [
        {
            "src": [
                {
                    "files": ["**/NiTiS.Core.csproj"]
                }
            ],
            "dest": "bin/api/Core",
            "disableGitFeatures": false,
            "disableDefaultFilter": false,
            "properties": {
              "TargetFramework": "net7.0"
            }
        },
        {
            "src": [
                {
                    "files": ["**/NiTiS.Collections.csproj"]
                }
            ],
            "dest": "bin/api/Collections",
            "disableGitFeatures": false,
            "disableDefaultFilter": false,
            "properties": {
              "TargetFramework": "net7.0"
            }
        },
        {
            "src": [
                {
                    "files": ["**/NiTiS.Math.csproj"]
                }
            ],
            "dest": "bin/api/Math",
            "disableGitFeatures": false,
            "disableDefaultFilter": false,
            "properties": {
              "TargetFramework": "net7.0"
            }
        }
    ],
    "build": {
        "sitemap": {
          "baseUrl": "https://NiTiS-Dev.github.io/wiki",
          "priority": 0.1,
          "changefreq": "weekly"
        },
        "content": [
            { "files": "articles/**.md" },
            { "files": "bin/api/**.yml" },
            { "files": "index.md" },
            { "files": "toc.yml" }
        ],
        "dest": "_site/",
        "globalMetadata": {
            "_enableSearch": true,
            "_gitContribute": { "branch": "web" }
        }
    }
}
