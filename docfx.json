{
    "metadata": [
        {
            "src": [
                {
                    "files": ["**/NiTiS.Core.csproj"]
                }
            ],
            "dest": "bin/api",
            "disableGitFeatures": false,
            "disableDefaultFilter": false,
            "properties": {
              "TargetFramework": "net7.0"
            }
        },
        {
            "src": [
                {
                    "files": ["**/NiTiS.Collections.csproj"]
                }
            ],
            "dest": "bin/api",
            "disableGitFeatures": false,
            "disableDefaultFilter": false,
            "properties": {
              "TargetFramework": "net7.0"
            }
        },
        {
            "src": [
                {
                    "files": ["**/NiTiS.Math.csproj"]
                }
            ],
            "dest": "bin/api",
            "disableGitFeatures": false,
            "disableDefaultFilter": false,
            "properties": {
              "TargetFramework": "net7.0"
            }
        }
    ],
    "build": {
        "sitemap": {
          "baseUrl": "https://nitis-dev.github.io/wiki",
          "priority": 0.1,
          "changefreq": "weekly"
        },
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "content": [
            { "files": "articles/**.md" },
            { "files": "**/api/**.yml", "src": "bin/" },
            { "files": "index.md" },
            { "files": "toc.yml" }
        ],
        "dest": "_site/",
        "globalMetadata": {
            "_enableSearch": true,
            "_gitContribute": { "branch": "web" }
        },
        "template": [
            "statictoc",
            "templates"
        ],
        "postProcessors": [
            "ExtractSearchIndex"
        ],
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false
    }
}
